<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rudisdev.sounddemo.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="playAudio"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_media_play"
        android:id="@+id/btnPlay"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/chronometer2"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/floatingActionButton5"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.94" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="pauseAudio"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_media_pause"
        android:id="@+id/btnPause"
        app:layout_constraintTop_toBottomOf="@+id/chronometer2"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/seekBarProgress"
        android:layout_marginRight="139dp"
        android:layout_marginEnd="139dp"
        tools:layout_constraintRight_creator="1" />

    <SeekBar
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        app:layout_constraintLeft_toLeftOf="@+id/btnPause"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="7dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/btnPause"
        tools:layout_constraintRight_creator="1" />

    <SeekBar
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/seekBarProgress"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="12dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/chronometer2"
        android:layout_marginBottom="3dp"
        tools:layout_constraintBottom_creator="1" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="stopAudio"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        android:id="@+id/floatingActionButton5"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/chronometer2"
        android:layout_marginTop="5dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/seekBar"
        android:layout_marginRight="149dp"
        android:layout_marginEnd="149dp"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        android:id="@+id/imageView"
        android:background="@color/colorPrimary"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="118dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:layout_marginBottom="120dp"
        tools:layout_constraintBottom_creator="1" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/nights"
        android:id="@+id/imageView2"
        android:contentDescription=""
        tools:ignore="ContentDescription"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:text="@string/nightwish_song_of_my_self"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/seekBar"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/seekBar"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        tools:layout_constraintRight_creator="1" />

    <Chronometer
        android:layout_width="56dp"
        android:layout_height="27dp"
        android:id="@+id/chronometer2"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="serif"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="@+id/btnPlay"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="74dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnPause"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        android:layout_marginBottom="73dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintVertical_bias="0.54" />

</android.support.constraint.ConstraintLayout>
